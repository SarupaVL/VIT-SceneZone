{
  "manifest_version": 3,
  "name": "WhatsApp Message Extractor",
  "version": "1.0.0",
  "description": "Extract WhatsApp messages from a selected date range and show live count.",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "https://web.whatsapp.com/*"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  }
}
